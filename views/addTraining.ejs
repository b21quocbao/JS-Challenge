<%- include("header"); -%>
<script>
  tinymce.init({
      selector: 'textarea',
      plugins: 'a11ychecker advcode casechange formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
      toolbar: 'a11ycheck addcomment showcomments casechange checklist code formatpainter pageembed permanentpen table',
      toolbar_mode: 'floating',
      tinycomments_mode: 'embedded',
      tinycomments_author: 'Author name',
    });
</script>
<main class="page landing-page">
  <section class="clean-block clean-form dark">
    <div class="container">
      <div class="block-heading">
        <h2 class="text-info">Thêm training</h2>
      </div>

      <form method="POST" action="/trainings/add">
        <div class="form-group"><label for="name">Training name</label><input class="form-control item" type="text" id="name"
            name="name"></div>
        <div class="form-group"><label for="mentor">Mentor</label><input class="form-control item" type="text" id="mentor"
            name="mentor"></div>
        <div class="form-group"><label for="phone">Phone</label><input class="form-control item" type="tel" id="phone"
            name="phone"></div>
        <div class="form-group"><label for="room">Room</label><input class="form-control item" type="text" id="room"
            name="room"></div>
        <div class="form-group"><label for="startDate">Start Date</label><input class="form-control item" type="date" id="startDate"
            name="startDate"></div>
        <div class="form-group"><label for="endDate">End Date</label><input class="form-control item" type="date" id="endDate"
            name="endDate"></div>
        <div class="form-group"><label for="meet">Google meet link</label><input class="form-control item" type="url" id="meet"
            name="meet"></div>
        <div class="form-group"><label for="link">Material link</label><input class="form-control item" type="url" id="link"
            name="link"></div>
        <div class="form-group"><label for="imgPath">Link Ảnh</label><input class="form-control item" type="text" id="imgPath"
            name="imgPath"></div>
        <div class="form-group"><label for="brief">Giới thiệu</label><textarea class="form-control item" type="text" id="brief"
            name="brief"></textarea></div>
        <div class="form-group"><label for="popular">Độ phổ biến</label><textarea class="form-control item" type="text" id="popular"
            name="popular"></textarea></div>
        <div class="form-group"><label for="requirement">Yêu cầu</label><textarea class="form-control item" type="text" id="requirement"
            name="requirement"></textarea></div>
        <div class="form-group"><label for="syllabus">Syllabus</label><textarea class="form-control item" type="text" id="syllabus"
            name="syllabus"></textarea></div>
        </br>
        <button class="btn btn-primary btn-block" type="submit">Tạo training</button>
      </form>
    </div>
  </section>
</main>
<%- include("footer"); -%>