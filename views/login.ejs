<%- include("header"); -%>

    <main class="page login-page">
        <section class="clean-block clean-form dark">
            <div class="container">
                <div class="block-heading">
                    <h2 class="text-info">Đăng Nhập</h2><p>Chưa có tài khoản? <a class="text-info" href="registration">Đăng ký</a></p>
                    <% try { error %>
                      <div class="btn-warning col-md-5" style="margin: auto; margin-top: .5rem; padding: .5rem;"><%= error %></div>
                    <% } catch (e) {} %>
                </div>

                <form method="POST" action="/users/login">
                    <div class="form-group"><label for="email">Email</label><input class="form-control item" type="email" id="email" name="email"></div>
                    <div class="form-group"><label for="password">Mật khẩu</label><input class="form-control" type="password" id="password" name="password"></div>
                    <div>
                      <div class="form-group" style="display: inline-block;">
                          <div class="form-check"><input class="form-check-input" type="checkbox" id="checkbox" name="remember"><label class="form-check-label" for="checkbox" style="font-size: small;">Remember me for 1 month</label></div>
                      </div>
                      <a href="/users/forgot" style="float: right; font-size: small;">Forgot password?</a>
                    </div>
                    <button class="btn btn-primary btn-block" type="submit">Đăng nhập</button></form>
            </div>
        </section>
    </main>
    
<%- include("footer"); -%>