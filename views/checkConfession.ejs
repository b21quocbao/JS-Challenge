<%- include("header"); -%>
<main class="page blog-post">

<section class="clean-block clean-post dark">
  <% for (let i of confessions) { %>
    <div class="container mb-5">
      <div class="block-content">
        <div class="post-body">
          <p style="font-size: 20px;"><%= i.text %></p>
          <form action="/confessions/<%= i._id %>/accept" method="POST" style="display: inline-block;">
            <button type="submit" class="btn btn-success mr-1">Accept</button>
          </form>
          <form action="/confessions/<%= i._id %>/decline" method="POST" style="display: inline-block;">
            <button type="submit" class="btn btn-danger">Decline</button>
          </form>
        </div>
      </div>
    </div>
  <% } %>
</section>
</main>
<%- include("footer"); -%>
